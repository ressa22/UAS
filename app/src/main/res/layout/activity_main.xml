                android:layout_width="wrap_content"
                android:gravity="end"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1">
                <TextView

                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
